{
  "name": "AI Multi-Agent Starter Kit",
  "dockerComposeFile": "../docker/compose.dev.yml",
  "service": "api",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay"
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "remoteEnv": {
    "DRY_RUN": "${localEnv:DRY_RUN:-true}",
    "RUNNER_ENABLED": "${localEnv:RUNNER_ENABLED:-false}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "PERPLEXITY_API_KEY": "${localEnv:PERPLEXITY_API_KEY}",
    "OPENAI_ENABLED": "${localEnv:OPENAI_ENABLED:-false}",
    "LLM_PRIORITY": "${localEnv:LLM_PRIORITY:-anthropic,gemini,perplexity}",
    "PERPLEXITY_SEARCH_ONLY": "${localEnv:PERPLEXITY_SEARCH_ONLY:-true}",
    "LLM_DAILY_MAX_COST_USD": "${localEnv:LLM_DAILY_MAX_COST_USD:-0.0}",
    "PERPLEXITY_MAX_REQUESTS_PER_DAY": "${localEnv:PERPLEXITY_MAX_REQUESTS_PER_DAY:-0}",
    "LLM_TIMEOUT": "${localEnv:LLM_TIMEOUT:-60}",
    "LLM_MAX_RETRIES": "${localEnv:LLM_MAX_RETRIES:-3}",
    "ANTHROPIC_MODEL": "${localEnv:ANTHROPIC_MODEL:-claude-3-5-sonnet-20241022}",
    "ANTHROPIC_MAX_TOKENS": "${localEnv:ANTHROPIC_MAX_TOKENS:-4096}",
    "GEMINI_MODEL": "${localEnv:GEMINI_MODEL:-gemini-1.5-pro}",
    "GEMINI_MAX_TOKENS": "${localEnv:GEMINI_MAX_TOKENS:-8192}",
    "PERPLEXITY_MODEL": "${localEnv:PERPLEXITY_MODEL:-llama-3.1-sonar-large-128k-online}",
    "PERPLEXITY_MAX_TOKENS": "${localEnv:PERPLEXITY_MAX_TOKENS:-4096}",
    "OPENAI_MODEL": "${localEnv:OPENAI_MODEL:-gpt-4}",
    "OPENAI_MAX_TOKENS": "${localEnv:OPENAI_MAX_TOKENS:-4096}"
  },

  "forwardPorts": [8000, 5432, 6379, 3000],

  "portsAttributes": {
    "8000": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "UI Dashboard",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },

  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ]
}
