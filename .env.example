# AI Multi-Agent Starter Kit - Environment Variables

# Environment
ENVIRONMENT=development

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
PERPLEXITY_API_KEY=your-perplexity-key
PERPLEXITY_MAX_REQUESTS_PER_DAY=50
PERPLEXITY_MAX_DOLLARS_PER_MONTH=5

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_agents

# Redis
REDIS_URL=redis://localhost:6379

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Applications Config
# Care Scheduler
CARE_SCHEDULER_ENABLED=true

# SNS Auto
SNS_AUTO_ENABLED=true
TWITTER_API_KEY=
TWITTER_API_SECRET=
FACEBOOK_ACCESS_TOKEN=
INSTAGRAM_ACCESS_TOKEN=
LINKEDIN_ACCESS_TOKEN=

# HR Matching
HR_MATCHING_ENABLED=true

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
